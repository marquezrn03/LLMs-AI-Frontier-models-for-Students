        const referencesListEl = document.getElementById('references-list');
        references.forEach((ref, index) => {
            const item = document.createElement('div');
            item.classList.add('reference-item');
            item.setAttribute('id', `ref-${index + 1}`);
            item.setAttribute('data-ref-id', `[${index + 1}]`);
            item.innerHTML = ref.substring(ref.indexOf(']') + 2); 
            referencesListEl.appendChild(item);
        });

        const mainContent = document.querySelector('main');
        mainContent.innerHTML = mainContent.innerHTML.replace(/\[(\d+)\]/g, (match, num) => {
            return `<a href="#ref-${num}" class="text-blue-600 hover:underline font-semibold">${match}</a>`;
        }).replace(/\[(\d+-\d+)\]/g, (match, range) => { 
            const [start, end] = range.split('-').map(Number);
            let links = '';
            for (let i = start; i <= end; i++) {
                links += `<a href="#ref-${i}" class="text-blue-600 hover:underline font-semibold">[${i}]</a>`;
                if (i < end) links += ', ';
            }
            return links;
        }).replace(/\[(\d+,\s*\d+(,\s*\d+)*)\]/g, (match, numbers) => { 
             const individualNumbers = numbers.split(',').map(s => s.trim());
             let links = '';
             individualNumbers.forEach((numOrRange, idx) => {
                if (numOrRange.includes('-')) {
                    const [start, end] = numOrRange.split('-').map(Number);
                     for (let i = start; i <= end; i++) {
                        links += `<a href="#ref-${i}" class="text-blue-600 hover:underline font-semibold">[${i}]</a>`;
                        if (i < end) links += ', ';
                    }
                } else {
                    links += `<a href="#ref-${numOrRange}" class="text-blue-600 hover:underline font-semibold">[${numOrRange}]</a>`;
                }
                if (idx < individualNumbers.length - 1) links += ', ';
             });
             return links;
        });

    });
